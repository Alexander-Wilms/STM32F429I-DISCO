// finite state machine
// based on http://skript.eit.h-da.de/rzs/Documentation/Rolltor/fsm_8c-source.html

#include <inttypes.h>
#include "fsm.h"
#include <queue>

void test() {
    std::queue<int> myQueue;
    myQueue.push(10);
    if (myQueue.size())
        myQueue.pop();
}

volatile uint16_t recorded_event;

int get_event( void)
{
	int returnvalue = recorded_event;
	recorded_event = NO_EVENT;
	return returnvalue;
}

void signal_event( int event)
{
	recorded_event = event;
}
